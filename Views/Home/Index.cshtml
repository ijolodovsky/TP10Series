
@{
    ViewData["Title"] = "Series";
}
<h1>Series</h1>

    <div class="row">
        @foreach(var serie in ViewBag.Series)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card">
                    <img src="@serie.ImagenSerie" class="card-img-top" alt="@serie.Nombre">
                    <div class ="card-body">
                        <h5 class="card-title">@serie.Nombre</h5>
                        <a class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" onclick="MostrarTemporadas(@serie.IdSerie)">Temporadas</a>
                        <a class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" onclick="MostrarActores(@serie.IdSerie)">Actores</a>
                        <a class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" onclick="MostrarInfo(@serie.IdSerie)">Mas Informacion</a>
                    </div>
                </div>
            </div>
        
        }
    </div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="ModalBody">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
